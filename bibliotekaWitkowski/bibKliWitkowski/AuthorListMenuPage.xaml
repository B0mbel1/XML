<Page
    x:Class="bibKliWitkowski.AuthorListMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolKit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:local="using:bibKliWitkowski"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Autorzy"  Style="{ThemeResource HeaderTextBlockStyle}"/>
            <toolKit:DataGrid Name="dataGrid" Margin="15" ItemsSource="{x:Bind AuthorsViewModel.Autorzy}"/>
        </StackPanel>
    </Grid>
</Page>
